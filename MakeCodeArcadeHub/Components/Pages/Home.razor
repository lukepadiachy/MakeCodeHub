@page "/"
@inherits LayoutComponentBase

<style>
    
    body {
        background: linear-gradient(to bottom, rgba(255,255,255,0.15) 0%, rgba(0,0,0,0.15) 100%), radial-gradient(at top center, rgba(255,255,255,0.40) 0%, rgba(0,0,0,0.40) 120%) #989898;
        background-blend-mode: multiply,multiply;
        color: white;
        font-family: 'Minecraft', sans-serif;
        padding-top: 50px;
        margin: 0;
    }

    .header-wrapper {
        background-color: black;
        border-radius: 20px 20px 0 0;
        padding: 20px;
        margin-bottom: 20px;
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    .header {
        text-align: center;
        margin-bottom: 50px;
    }

    .title {
        font-size: 48px;
        margin-bottom: 20px;
    }

    .subtitle {
        font-size: 18px;
        line-height: 1.5;
    }

    .masonry {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        grid-gap: 20px;
    }

    .masonry-item {
        display: flex;
        flex-direction: column;
        border-radius: 20px;
        overflow: hidden;
    }

        .masonry-item iframe {
            width: 100%;
            height: 100%;
            border: none;
        }

    
    .game-info {
        background-color: white;
        padding: 20px;
        border-radius: 20px;
        margin-top: 20px;
        display: flex;
        flex-direction: column;
    }

    .game-title {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 10px;
        color: black;
    }

    .game-description {
        font-size: 16px;
        margin-bottom: 10px;
        color: black;
    }

    .btn {
        background-color: black;
        color: white;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        align-self: flex-end;
        text-decoration: none;
    }

        .btn:hover {
            background-color: #333;
        }
</style>

